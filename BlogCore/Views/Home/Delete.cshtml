@model BlogCore.Models.Contact

@{
	ViewData["title"] = "Delete contact";
}

<h1 class="text-center">Contact with .NET 7 (.Net Core MVC)</h1>
<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="card-title text-white"><strong>Edit Contact</strong></h3>
            </div>
            <div class="card-body">
                 <form
                    asp-action="Delete"
                    method="POST"
                 >

                    <input type="hidden" asp-for="Id"/>

                    <div
                        asp-validation-summary="ModelOnly" class="text-danger"    
                    ></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input readonly asp-for="Name" class="form-control mt-1"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label"></label>
                        <input readonly asp-for="Phone" class="form-control mt-1"/>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Smarthphone" class="control-label"></label>
                        <input readonly asp-for="Smarthphone" class="form-control mt-1"/>
                        <span asp-validation-for="Smarthphone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input readonly asp-for="Email" class="form-control mt-1"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-success d-block mx-auto">
                            <i class="bi bi-eraser-fill">Delete Contact</i>
                        </button>
                    </div>
                 </form>
            </div>
        </div>
    </div>
</div>